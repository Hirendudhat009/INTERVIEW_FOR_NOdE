<%- include('../layouts/header') %>
  <style>
    .dataTables_wrapper .dataTables_paginate .paginate_button:hover {
      background-color: #c850c0 !important;
      background: #c850c0 !important;
    }

    .dataTables_wrapper .dataTables_paginate .paginate_button:hover
  </style>
  <div class="page-heading">
    <div class="page-title">
      <div class="row">
        <div class="col-6 col-md-6 col-sm-12 order-md-1 order-last">
          <div class="row">
            <div class="col-2 col-md-3 col-sm-12 order-md-1 order-last">
              <h3>Users</h3>
            </div>
          </div>
        </div>
      </div>
    </div>
    <section class="section">

      <div class="card">
        <div class="card-header" style="text-transform: capitalize;">
          Users
        </div>
        <div class="card-body">
          <table class="table table-striped" id="dataTable">
            <thead>
              <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>DOB</th>
              </tr>
            </thead>
            <tbody>
            </tbody>
          </table>
        </div>
      </div>

    </section>
  </div>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.min.js"></script>
  <script>
    $(document).ready(function () {
      var table = $('#dataTable').DataTable({
        ajax: {
          type: "GET",
          url: "/users/data",
          dataSrc: "data",
        },
        columns: [
          {
            "render": function (data, type, full, meta) {
              return meta.row + 1
            }
          },
          {
            "data": 'fullName',
          },
          {
            "data": 'email',
          },
          {
            "data": "phoneNumber",
          },
          {
            "data": "dob",
          }
        ]
      });
    })
  </script>

  <%- include('../layouts/footer') %>